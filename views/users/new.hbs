<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/users">Users</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create user</li>
    </ol>
</nav>

<form action="/users/new" method="post">
    {{ csrf_token }}

    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control {{#if errors.username}}is-invalid{{/if}} name" id="username"
            name="username" value="{{values.username}}" required>
        {{#if errors.username}}
        <div class="invalid-feedback">
            {{errors.username}}
        </div>
        {{/if}}
    </div>



    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control {{#if errors.name}}is-invalid{{/if}} name" id="name" name="name"
            value="{{values.name}}" required>
        {{#if errors.name}}
        <div class="invalid-feedback">
            {{errors.name}}
        </div>
        {{/if}}
        <small class="form-text text-muted">Name of the user.</small>
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control {{#if errors.email}}is-invalid{{/if}} email" id="email" name="email"
            value="{{values.email}}" required>
        {{#if errors.email}}
        <div class="invalid-feedback">
            {{errors.email}}
        </div>
        {{/if}}
        <small class="form-text text-muted">Email address of the user.</small>
    </div>

    <div class="form-group">
        <label for="level">Level</label>

        <select class="custom-select {{#if errors.level}}is-invalid{{/if}}" id="level" name="level" required>
            {{#each levels}}
            <option value="{{level}}" {{#if selected}}selected{{/if}}>{{name}}</option>
            {{/each}}
        </select>

        {{#if errors.level}}
        <div class="invalid-feedback">
            {{errors.level}}
        </div>
        {{/if}}
        <small class="form-text text-muted">User permissions level. Administrator accounts can manage other
            accounts.</small>
    </div>

    <div class="form-group">
        <label for="pgpPubKey">PGP public key</label>
        <textarea class="form-control droptxt {{#if errors.pgpPubKey}}is-invalid{{/if}}" id="pgpPubKey" name="pgpPubKey"
            rows="3" placeholder="-----BEGIN PGP PUBLIC KEY BLOCK-----â€¦" required>{{values.pgpPubKey}}</textarea>
        {{#if errors.pgpPubKey}}
        <div class="invalid-feedback">
            {{errors.pgpPubKey}}
        </div>
        {{/if}}
        <small class="form-text text-muted">Encrypt generated password using this key.</small>
    </div>

    <div class="mt-3 mb-3">
        <button type="submit" class="btn btn-primary btn-sm"><svg width="1em" height="1em" viewBox="0 0 16 16"
                class="bi bi-person-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                    d="M11 14s1 0 1-1-1-4-6-4-6 3-6 4 1 1 1 1h10zm-9.995-.944v-.002.002zM1.022 13h9.956a.274.274 0 0 0 .014-.002l.008-.002c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664a1.05 1.05 0 0 0 .022.004zm9.974.056v-.002.002zM6 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0zm4.5 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                <path fill-rule="evenodd" d="M13 7.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0v-2z" />
            </svg> Create user</button>
    </div>
</form>