<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/account">Account</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit account</li>
    </ol>
</nav>

<form action="/account/edit" method="post" autocomplete="off">
    {{ csrf_token }}

    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" readonly class="form-control-plaintext" id="username" value="{{userData.username}}">
    </div>

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control {{#if errors.name}}is-invalid{{/if}} name" id="name" name="name"
            value="{{values.name}}" required>
        {{#if errors.name}}
        <div class="invalid-feedback">
            {{errors.name}}
        </div>
        {{/if}}
        <small class="form-text text-muted">Name of the user.</small>
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control {{#if errors.email}}is-invalid{{/if}} email" id="email" name="email"
            value="{{values.email}}" required>
        {{#if errors.email}}
        <div class="invalid-feedback">
            {{errors.email}}
        </div>
        {{/if}}
        <small class="form-text text-muted">Email address of the user.</small>
    </div>

    <div class="form-group">
        <label for="pgpPubKey">PGP public key</label>
        <textarea class="form-control droptxt {{#if errors.pgpPubKey}}is-invalid{{/if}}" id="pgpPubKey" name="pgpPubKey"
            rows="3" placeholder="-----BEGIN PGP PUBLIC KEY BLOCK-----â€¦" required>{{values.pgpPubKey}}</textarea>
        {{#if errors.pgpPubKey}}
        <div class="invalid-feedback">
            {{errors.pgpPubKey}}
        </div>
        {{/if}}
    </div>

    <hr>
    <p class="text-muted">Leave the following fields empty if you do not want to change your password.</p>

    <div class="form-group">
        <label for="passwordCurrent">Current password</label>
        <input type="password" autocomplete="current-password"
            class="form-control {{#if errors.passwordCurrent}}is-invalid{{/if}}" id="passwordCurrent"
            name="passwordCurrent" value="{{values.passwordCurrent}}">
        {{#if errors.passwordCurrent}}
        <div class="invalid-feedback">
            {{errors.passwordCurrent}}
        </div>
        {{/if}}
    </div>

    <div class="form-group">
        <label for="password">New password</label>
        <input type="password" autocomplete="new-password" class="form-control {{#if errors.password}}is-invalid{{/if}}"
            id="password" name="password" value="{{values.password}}">
        {{#if errors.password}}
        <div class="invalid-feedback">
            {{errors.password}}
        </div>
        {{/if}}
    </div>

    <div class="form-group">
        <label for="password2">Confirm password</label>
        <input type="password" autocomplete="new-password"
            class="form-control {{#if errors.password2}}is-invalid{{/if}}" id="password2" name="password2"
            value="{{values.password2}}">
        {{#if errors.password2}}
        <div class="invalid-feedback">
            {{errors.password2}}
        </div>
        {{/if}}
    </div>

    <div class="mt-3 mb-3">
        <button type="submit" class="btn btn-primary">Update user</button>
    </div>
</form>