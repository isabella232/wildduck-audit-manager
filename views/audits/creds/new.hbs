<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/audits">Audits</a></li>
        <li class="breadcrumb-item"><a href="/audits/audit/{{audit._id}}">{{audit.display.name}}</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create credentials</li>
    </ol>
</nav>

<form action="/audits/creds/new" method="post">
    {{ csrf_token }}
    <input type="hidden" name="audit" value="{{audit._id}}" />

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control {{#if errors.name}}is-invalid{{/if}} name" id="name" name="name"
            value="{{values.name}}" required>
        {{#if errors.name}}
        <div class="invalid-feedback">
            {{errors.name}}
        </div>
        {{/if}}
        <small class="form-text text-muted">Name of the credentials holder.</small>
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control {{#if errors.email}}is-invalid{{/if}} email" id="email" name="email"
            value="{{values.email}}" required>
        {{#if errors.email}}
        <div class="invalid-feedback">
            {{errors.email}}
        </div>
        {{/if}}
        <small class="form-text text-muted">Email address of the credentials holder.</small>
    </div>

    <div class="form-group">
        <label for="pgpPubKey">PGP public key</label>
        <textarea class="form-control {{#if errors.pgpPubKey}}is-invalid{{/if}}" id="pgpPubKey" name="pgpPubKey"
            rows="3" style="font-family: monospace;" placeholder="-----BEGIN PGP PUBLIC KEY BLOCK-----â€¦"
            required>{{values.pgpPubKey}}</textarea>
        {{#if errors.pgpPubKey}}
        <div class="invalid-feedback">
            {{errors.pgpPubKey}}
        </div>
        {{/if}}
        <small class="form-text text-muted">Encrypt generated credentials using this key.</small>
    </div>

    <div class="form-group">
        <label for="notes">Notes</label>
        <textarea class="form-control {{#if errors.notes}}is-invalid{{/if}}" id="notes" name="notes" rows="3"
            required>{{values.notes}}</textarea>
        {{#if errors.notes}}
        <div class="invalid-feedback">
            {{errors.notes}}
        </div>
        {{/if}}
        <small class="form-text text-muted">Reason for creating these credentials.</small>
    </div>

    <div class="mt-3 mb-3">
        <button type="submit" class="btn btn-primary">Create credentials</button>
    </div>
</form>