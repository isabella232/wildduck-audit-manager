<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Status</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Period</th>
                <th scope="col">Expires</th>
            </tr>
        </thead>
        <tbody>
            {{#each listing.data}}
            <tr>
                <td>
                    <a class="fullcell" href="/audits/audit/{{_id}}">
                        <span class="badge badge-{{display.status.type}}">{{display.status.title}}</span>
                    </a>
                </td>
                <td>
                    <a class="fullcell" href="/audits/audit/{{_id}}">
                        {{display.name}}
                    </a>
                </td>
                <td>
                    <a class="fullcell" href="/audits/audit/{{_id}}">
                        {{display.address}}
                    </a>
                </td>
                <td>
                    <a class="fullcell" href="/audits/audit/{{_id}}">
                        {{#if display.start}}
                        <span class="timestr" title="{{display.start}}">
                            {{display.start}}
                        </span>
                        {{else}}
                        –
                        {{/if}}
                        –
                        {{#if display.end}}
                        <span class="timestr" title="{{display.end}}">
                            {{display.end}}
                        </span>
                        {{else}}
                        –
                        {{/if}}
                    </a>
                </td>
                <td>
                    <a class="fullcell timestr" href="/audits/audit/{{_id}}" title="{{display.expires}}">
                        {{display.expires}}
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>